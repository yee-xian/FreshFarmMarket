@page
@model WebApplication1.Pages.Error404Model
@{
ViewData["Title"] = "Page Not Found";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
       <div class="card shadow border-warning">
       <div class="card-body py-5">
     <i class="bi bi-question-circle text-warning" style="font-size: 5rem;"></i>
  <h1 class="display-4 mt-3">404</h1>
     <h2 class="text-warning">Page Not Found</h2>
        <p class="text-muted mt-3">
  Sorry, the page you're looking for doesn't exist or has been moved.
 </p>
       <hr />
<div class="d-flex justify-content-center gap-3">
   <a asp-page="/Index" class="btn btn-primary">
     <i class="bi bi-house"></i> Go Home
     </a>
    <button onclick="history.back()" class="btn btn-outline-secondary">
       <i class="bi bi-arrow-left"></i> Go Back
            </button>
         </div>
  </div>
    </div>
  </div>
    </div>
