@page
@model WebApplication1.Pages.LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
   <div class="card shadow">
        <div class="card-header bg-warning">
        <h3 class="mb-0"><i class="bi bi-shield-lock"></i> Two-Factor Authentication</h3>
     </div>
     <div class="card-body">
      <p>Your login is protected with 2FA. Please enter your authentication code.</p>
        
       <form method="post">
        <input type="hidden" asp-for="RememberMe" value="@Model.RememberMe" />
    <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
         
      <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
           <div class="mb-3">
         <label class="form-label" asp-for="Input.Code"></label>
       <input asp-for="Input.Code" class="form-control" autocomplete="off" placeholder="Enter your 6-digit code" autofocus />
    <span asp-validation-for="Input.Code" class="text-danger"></span>
            </div>
             
       <div class="mb-3 form-check">
             <input type="checkbox" asp-for="Input.RememberMachine" class="form-check-input" />
       <label class="form-check-label" asp-for="Input.RememberMachine">
   Remember this device
 </label>
           </div>
          
 <div class="d-grid gap-2">
                  <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> Verify
              </button>
      </div>
             </form>
         
               <hr />
      
         <p class="text-muted small">
     Don't have access to your authenticator app? 
             <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
Use a recovery code
       </a>
           </p>
    </div>
    </div>
      </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
